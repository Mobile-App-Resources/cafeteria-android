<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <item>
        <layer-list>

            <!-- (밑으로) : 그림자 -->
            <item android:top="8dp">
                <shape>
                    <corners android:radius="20dp" />
                    <solid android:color="@color/heavyGray"/>
                </shape>
            </item>


            <!-- background (위로) -->
            <item android:bottom="0.5dp">
                <shape>
                    <corners android:radius="20dp" />
                    <solid android:color="#ffffff" />
                    <stroke android:width="0.5dp" android:color="@color/lightGray" />
                </shape>
            </item>


            <item android:right="1dp" android:left="1dp">
                <shape>
                    <corners android:radius="20dp" />
                    <stroke android:width="0.5dp" android:color="@color/middleGray" />
                </shape>
            </item>


        </layer-list>
    </item>
</selector>

