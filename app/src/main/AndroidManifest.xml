<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.inu.cafeteria">

    <!-- for network -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- for wake up display when push is arrived -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- for permission vibrator -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- for get device information -->
    <!-- <uses-permission android:name="android.permission.READ_PHONE_STATE" /> -->
    <!-- <uses-permission android:name="android.permission.BLUETOOTH" /> -->
    <application
        android:name=".Application.ApplicationController"
        android:allowBackup="true"
        android:icon="@drawable/logo_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- entry point -->
        <!--<activity android:name=".Activity.Main2Activity">-->
        <activity android:name=".Activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- FCM -->
        <service android:name=".Firebase.FirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".Firebase.FirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <!--<activity android:name=".Activity.LoginActivity" />-->

        <!-- adjustPan : cut the UI for edit text when keyboard up -->
        <activity android:name=".Activity.LoginActivity" />
        <activity
            android:name=".Activity.MainActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".Activity.AppInformationActivity" />
        <activity android:name=".Activity.InquireActivity" />
        <activity
            android:name=".Activity.EnlargeAdvertisementActivity"
            android:theme="@style/Transparent" />
        <activity
            android:name=".Utility.DialogVibe"
            android:theme="@android:style/Theme.Dialog" />

    </application>

</manifest>